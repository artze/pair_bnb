<div class="form-group">
	<%= f.label 'Check-in date', class: 'control-label col-md-4' %>
	<div class="col-md-6">
		<div class="input-group date">
			<%= f.text_field :booking_start, class: 'form-control', id: 'check-in-date' %>
			<div class="input-group-addon">
				<span class="glyphicon glyphicon-calendar"></span>
			</div>
		</div>
	</div>
</div>

<div class="form-group">
	<%= f.label 'Check-out date', class: 'control-label col-md-4' %>
	<div class="col-md-6">
		<div class="input-group date">
			<%= f.text_field :booking_end, class: 'form-control', id: 'check-out-date' %>
			<div class="input-group-addon">
				<span class="glyphicon glyphicon-calendar"></span>
			</div>
		</div>
	</div>
</div>

<div class="form-group">
	<div class="col-md-6 col-md-offset-4">
		<%= f.submit 'Book now', class: 'btn' %>
	</div>
</div>