<div class="form-group">
	<%= f.label 'Check-in date', class: 'control-label col-md-3' %>
	<div class="col-md-4">
		<%= f.date_field :booking_start, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<%= f.label 'Check-out date', class: 'control-label col-md-3' %>
	<div class="col-md-4">
		<%= f.date_field :booking_end, class: 'form-control' %>
	</div>
</div>

<div class="form-group">
	<div class="col-md-4 col-md-offset-3">
		<%= f.submit 'Book now', class: 'btn' %>
	</div>
</div>