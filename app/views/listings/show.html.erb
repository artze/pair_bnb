<div class="jumbotron text-center">
	<% if @listing.images? %>
		<%= image_tag @listing.images.first.url %>
	<% else %>
		<%= image_tag("fallback/default.png") %>
	<% end %>
</div>
<div class="col-lg-6 col-lg-offset-3 show-listing-desc">
	<h3><%= @listing.title %></h3><h4><strong>$ <%= sprintf('%.2f', @listing.price) %></strong> per night</h4>
	<%= link_to 'Book now', new_listing_reservation_path(@listing.id), class: 'btn btn-primary show-book-btn' %>
	<p>Address: <%= @listing.street_address + ', ' + @listing.postcode + ' ' + @listing.city + ', ' + @listing.country %> </p>
	<br>
	<p><strong>Description:</strong><br><%= @listing.description %> </p>
	<br>
	<p><strong>Type:</strong> <%= @listing.home_type %> </p>
	<p><strong>Room type:</strong> <%= @listing.room_type %> </p>
	<p><strong>Number of Bedrooms:</strong> <%= @listing.bedroom %> </p>
	<p><strong>Number of Bathrooms:</strong> <%= @listing.bathroom %> </p>
	<p><strong>Accommodates:</strong> <%= @listing.accommodate %> guest(s) </p>
	<p><strong>Owner:</strong> <%= @listing.user.first_name + ' ' + @listing.user.last_name %> </p>
	<p><strong>Tags:</strong></p>
	<ul>
		<% @listing.tags.each do |elm| %>
		<li> <%= elm.tag_name %> </li>
		<% end %>
	</ul>

</div>
